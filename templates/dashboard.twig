{% extends "layout.twig" %}

{% block content %}
<div class="container mt-5">
    <h1 class="text-orange fw-bold text-center">Lista projektów i ich zadań</h1>

    {% for project in projects %}
    <div class="card my-4 shadow-sm">
        <div class="card-header bg-orange text-white">
            <h4 class="mb-0">{{ project.project_title }}</h4>
        </div>
        <div class="card-body">
            {% if project.tasks_exist %}
                <ul class="list-group">
                    {% for task in project.tasks %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ task.task_title }}
                        <a href="index.php?page=task&task_id={{ task.task_id }}" class="btn btn-sm btn-outline-primary">Zobacz</a>
                    </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-muted">Brak przypisanych zadań.</p>
            {% endif %}
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
